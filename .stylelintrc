{
  "extends": ["stylelint-config-standard", "stylelint-config-tailwindcss"],
  "plugins": ["stylelint-order"],
  "overrides": [
    {
      "files": ["**/*.scss"],
      "customSyntax": "postcss-scss"
    }
  ],
  "rules": {
    "order/properties-order": [],
    "at-rule-no-unknown": null
  },
  "ignoreFiles": [
    "**/.next/**",
    "**/node_modules/**",
    "**/out/**",
    "**/coverage/**"
  ]
}
